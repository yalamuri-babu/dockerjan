pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Smoke Test') {
            steps {
                sh '''
                  echo "Running smoke test..."
                  ls -la
                '''
            }
        }

        stage('Maven Build') {
            steps {
                sh '''
                  echo "Running Maven build..."
                  mvn clean package -DskipTests
                '''
            }
        }
    }
}
